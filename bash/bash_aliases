# Server SSH aliases external network
alias snebula='ssh nebula.bythewood.me'
alias sdocker='ssh docker.bythewood.me'

# Server SSH aliases internal network
alias sinebula='ssh 10.128.18.167'
alias sidocker='ssh 10.128.18.155'

# Force tmux into 256 color
alias tmux='tmux -2'

# Easy pastebin a file using sprunge
pastebin() {
    cat $1 | curl -F 'sprunge=<-' http://sprunge.us
}

# Shows top 10 most used commands
top10() {
    history | awk 'BEGIN {FS="[ \t]+|\\|"} {print $3}' | sort | uniq -c | sort -nr | head
}

