" Pathogen
execute pathogen#infect()


" General Settings
set t_Co=256
colorscheme wombat256mod
set expandtab
set tabstop=4
set shiftwidth=4
set number
syntax on
set nobackup
set nowritebackup
set noswapfile
set autoindent
set backspace=indent,eol,start
set ffs=unix,dos
set nocompatible
set laststatus=2
set encoding=utf-8
set nowrap
set colorcolumn=81
filetype plugin indent on


" neocomplcache
let g:neocomplcache_enable_at_startup=1


" Tab Settings
map <C-t>t :tabnext<CR>
map <C-t>l :tabnext<CR>
map <C-t>h :tabprev<CR>

